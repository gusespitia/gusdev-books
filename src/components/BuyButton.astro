---
import AmazonLogo from "./AmazonLogo.astro";

const SPAIN = "ES";
const country = Astro.request.headers.get("X-Vercel-IP-Country") ?? SPAIN;

// Definir tienda y nombre del país
const storeCountry = country === SPAIN ? "spain" : "belgium";
const countryName = country === SPAIN ? "España" : "Bélgica";

// Obtener URL de compra
const { buy } = Astro.props;
const url = buy[storeCountry] ?? "#";
const isValidUrl = buy[storeCountry] !== undefined;
---
<a
  href={isValidUrl ? url : "#"}
  title={`Comprar Libro en Amazon ${countryName}`}
  target="_blank"
  rel="noopener noreferrer"
  class={`flex items-center gap-2 bg-yellow-400 hover:bg-yellow-500 active:bg-yellow-600 transition duration-200 transform hover:scale-105 text-black font-bold py-2 px-4 rounded-lg justify-center border border-yellow-500 ${
    isValidUrl ? "" : "cursor-not-allowed opacity-50"
  }`}
>
  Comprar en Amazon {countryName}
  <AmazonLogo />
</a>
