---
import AmazonLogo from "./AmazonLogo.astro"

const BELGIUM = 'BE'

const country = Astro.request.headers.get('X-Vercel-IP-Country') ?? 'BE'

const storeCountry = country === BELGIUM ? 'belgium' : 'spain'
const countryName = country === BELGIUM ? 'Belgica' : 'Espa√±a'

const { buy } = Astro.props
const url = buy[storeCountry]
---
<a 
href={url} 
title="Comprar Libro"
target="_blank"
rel="noopener noreferrer"
class="flex items-center gap-2 bg-yellow-400 hover:bg-yellow-500 active:bg-yellow-600 transition transform hover:scale-105 text-black font-bold py-2 px-4 rounded-lg justify-center border border-yellow-500"
>
Comprar en Amazon {countryName}
<AmazonLogo />
</a>